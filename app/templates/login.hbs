<div class="container">
  {{#if error}}
      <div class="alert alert-danger" role="alert">
        <i class="fa fa-exclamation-triangle"></i>
        <span class="sr-only">Fel:</span>
        Fel användarnamn eller lösenord
      </div>
  {{/if}}
  <div class="panel panel-default col-md-offset-3 col-md-6 col-lg-offset-4 col-lg-4">
    <div class="panel-body">
  <form {{action 'authenticate' on='submit'}} role="form">
    <div class="form-group">
      <h3>Logga in i Fjärrkontrollen</h3>
      <label for="identification" class="sr-only">X-konto</label>
      {{input id="input-account" value=identification classBinding=":form-control :inputfield" placeholder='X-konto'}}
    </div>
    <div class="form-group">
      <label for="password" class="sr-only">Lösenord</label>
      {{input id="input-password" value=password classBinding=":form-control" placeholder='Lösenord' type='password'}}
    </div>
    <button class="btn btn-primary" type="submit">Logga in</button>
  </form>
  </div>
  </div>
</div>
